<!DOCTYPE html>
<html>
  <head>
    <title>RecycleStraw</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <% if flash[:notice] %>
    <div class="flash"><%= flash[:notice] %></div>
    <% end %>
    
  <body>
    <header>
         <div class="header-logo">
           <% if @current_user %>
             <%= link_to("100%植", "/posts/index") %>
           <% else %>
             <%= link_to("100%植", "/") %>
           <% end %>
         </div>
         <ul class="header-menus">
           <% if @current_user %>
             <li>
               <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
             </li>
             <li>
               <%= link_to("投稿一覧", "/posts/index") %>
             </li>
             <li>
               <%= link_to("新規投稿", "/posts/new") %>
             </li>
             <li>
               <%= link_to("ユーザー一覧", "/users/index") %>
             </li>
             <li>
               <%= link_to("ログアウト", "/logout", {method: :post}) %>
             </li>
           <% else %>
             <li>
               <%= link_to("100%植とは", "/about") %>
             </li>
             <li>
               <%= link_to("購入する","/items") %>
             </li>
             <li>
               <%= link_to("新規登録", "/signup") %>
             </li>
             <li>
               <%= link_to("ログイン", "/login") %>
             </li>
             <li>
               <%= link_to("商品追加","/new") %>
             </li>
           <% end %>
         </ul>
       </header>

       <% if flash[:notice] %>
         <div class="flash">
           <%= flash[:notice] %>
         </div>
       <% end %>

    <%= yield %>
  </body>
</html>
